mainReader = open(projectDir + os.sep + 'BRSLocDelaySystem.py','r').readlines()
mainWriter = open(projectDir + os.sep + 'BRSLocDelaySystemUpdated.py','w')
try:
	urlReader = urllib2.urlopen(scriptUpdater, timeout=60).readlines()
